<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.input :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price %>
  </div>
  <div class="field">
    <%= f.association :brand, include_blank: false %>
    <!-- f.collection_select :brand_id, collection: Brand.order(:name), :id, :name, include_blank: false -->
  </div>
  <div class="field">
    <%= f.association :category, include_blank: false %>
    <!-- f.collection_select :category_id, collection: Category.order(:name), :id, :name, include_blank: false -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
